<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/sizeWidthItemlandscape"
    android:layout_height="@dimen/sizeHeightItemlandscape"
    card_view:cardCornerRadius="@dimen/CornerRadiusCardView"
    card_view:cardElevation="@dimen/ElevationCardView"
    android:layout_margin="@dimen/paddingLayout"
    android:background="@color/icons"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/paddingLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sizeImageItemLandscape"
            android:id="@+id/imageProductPhone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleProductPhone"
            android:textSize="@dimen/textSizeTitleItemLandscape"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shortDescriptionPhone"
            android:textSize="@dimen/textSizeContentItemLandscape"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

    </LinearLayout>
    <TextView
        android:padding="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/priceProductPhone"
        android:layout_gravity="bottom|right"
        android:textSize="@dimen/textSizeContentItemLandscape"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>


</android.support.v7.widget.CardView>